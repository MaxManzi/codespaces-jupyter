x = 10

if x > 2:
    print("x is greater than 2")
elif x < 0:
    print("x is negative")
else:
    print("x is 0, 1, or 2")

import random

value = random.randint(1000, 9999)
print(value)

odds = 0
evens = 0

if value % 2 == 1:
    print("value is odd")
    odds = odds + 1
else:
    evens += 1
print("value is", value)
print("odds", odds)
print("evens", evens)
